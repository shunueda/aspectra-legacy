{
  "compilerOptions": {
    "target": "es2022",
    "experimentalDecorators": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "aspectra": ["src/index.ts"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
